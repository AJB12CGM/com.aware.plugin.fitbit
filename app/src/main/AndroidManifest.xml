<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aware.plugin.Fitbit">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <service
            android:name="com.aware.plugin.Fitbit.Plugin"
            android:exported="true" />

        <activity
            android:name="com.aware.plugin.Fitbit.Settings"
            android:exported="true" >
        </activity>

        <activity
            android:name=".Fitbit"
            android:label="Fitbit"
            android:launchMode = "singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="fitbit" android:host="logincallback"/>
            </intent-filter>
        </activity>

        <provider
            android:name="com.aware.plugin.Fitbit.Provider"
            android:authorities="${applicationId}.provider.xxx"
            android:exported="true"
            android:readPermission="com.aware.READ_CONTEXT_DATA"
            android:writePermission="com.aware.WRITE_CONTEXT_DATA" />

    </application>
</manifest>
